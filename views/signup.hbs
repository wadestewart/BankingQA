<div id="signup-content" class="row grey lighten-2">

  <div id="signup-card-image" class="col s12">

    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}

    <div id="signup-card" class="card grey lighten-5 right col s12 m6 l3">

      <h5 class="signup-title"><strong>Sign Up</strong></h5>

      <div class="divider grey"></div>

        <form method="post" action="/signup">
          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="text" name="email" id="email">
          </div>

          <div class="form-group">
            <label for="email">Password</label>
            <input class="form-control" type="password" name="password" id="password">
          </div>

          <button id="sign-submit" class="waves-effect waves-light btn-small orange lighten-1 black-text" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>

</div>
