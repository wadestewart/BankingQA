<div id="login-content" class="row grey lighten-2">

  <div id="login-card-image" class="col s12">

    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}

    <div id="login-card" class="card grey lighten-5 right col s12 m6 l3">

      <h5 class="login-title"><strong>Login</strong></h5>

      <div class="divider grey"></div>

      <div class="login-flex">
        <form method="post" action="/login">
          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control" type="text" name="email" id="email">
          </div>

          <div class="form-group">
            <label for="email">Password</label>
            <input class="form-control" type="password" name="password" id="password">
          </div>

          <button id="log-submit" class="waves-effect waves-light btn-small orange lighten-1 black-text" type="submit">Submit</button>
        </form>
      </div>
      
    </div>

  </div>

</div>
