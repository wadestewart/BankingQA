<div id="welcome-content" class="row white lighten-2">

    <div id="welcome-card-image" class="responsive-img col s12">

        {{#if message}}
            <div class="alert alert-danger">{{message}}</div>
        {{/if}}

        <div id="welcome-card" class="card white col s6 m4 z-depth-4">
            <h5 id="card-text">Fake Online Banking</h5>
            <div class="divider"></div>
            <div class="login-form">
                <form method="post" action="/login">
                    <div class="form-group col s6">
                        <label for="email">Email</label>
                        <input class="form-control" type="text" name="email" id="email">
                    </div>

                    <div class="form-group col s6">
                        <label for="password">Password</label>
                        <input class="form-control" type="password" name="password" id="password">
                    </div>

                    <button id="login-submit" class="center waves-effect waves-light btn orange lighten-1 black-text col s6" type="submit">Login</button>
                </form>
            </div>
            <div class="divider"></div>
            <div class="welcome-signup">
                <span>Don't Have An Account? Please Sign-Up</span>
                <a href='/signup' id="signup" class='waves-effect waves-light btn orange lighten-1 black-text col s6'>Sign Up</a>
            </div>
        </div>

    </div>


</div>

